<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        
     {% block stylesheets %}
         <link rel="stylesheet" href="{{ asset('bundles/appadmin/css/reset.css') }}" type="text/css" media="all" />
         <link rel="stylesheet" href="{{ asset('bundles/appadmin/css/style.css') }}" type="text/css" media="all" />
         <link rel="stylesheet" href="{{ asset('bundles/appadmin/css/invalid.css') }}" type="text/css" media="all" />
     {% endblock %}
     {% block javascripts %}
         <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"></script>
         <script src="{{ asset('bundles/appadmin/js/simpla.jquery.configuration.js') }}" type="text/javascript"></script>
         <script src="{{ asset('bundles/appadmin/js/facebox.js') }}" type="text/javascript"></script>
         <script src="{{ asset('bundles/appadmin/js/jquery.wysiwyg.js') }}" type="text/javascript"></script>

         <!--[if IE 6]>
             <script type="text/javascript" src="{{ asset('js/DD_belatedPNG_0.0.7a.js') }}"></script>
             <script type="text/javascript">
                     DD_belatedPNG.fix('.png_bg, img, li');
             </script>
         <![endif]-->
     {% endblock %}   
        

    </head>
    <body>
        <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{#{ 'layout.login'|trans({}, 'FOSUserBundle') }#}</a>
            {% endif %}
        </div>

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </body>
</html>
